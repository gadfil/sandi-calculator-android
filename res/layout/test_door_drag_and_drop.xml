<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/content"
        >

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView" android:layout_centerVertical="true" android:layout_centerHorizontal="true"/>
    <ListView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/listView"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/textView"/>

    <ImageView android:layout_width="@dimen/image_door_width"
               android:layout_height="@dimen/image_door_height"
               android:layout_marginLeft="15dp"
               android:layout_marginTop="10dp"
               android:visibility="gone"
               android:id="@+id/door1"/>
    <ImageView
            android:layout_width="@dimen/box_2__door_width"
            android:layout_height="@dimen/image_door_height"
            android:layout_alignParentTop="true"
            android:id="@+id/box"
            android:background="@drawable/test_box_2d"
            android:layout_toRightOf="@+id/listView"/>
    <LinearLayout
            android:layout_width="@dimen/box_2__door_width"
            android:layout_height="@dimen/image_door_height"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/listView">
        <ImageView android:layout_width="@dimen/image_door_width"
                   android:layout_height="@dimen/image_door_height"

                   android:id="@+id/door_1"/>
        <ImageView android:layout_width="@dimen/image_door_width"
                   android:layout_height="@dimen/image_door_height"
                   android:id="@+id/door_2"/>
    </LinearLayout>
</RelativeLayout>